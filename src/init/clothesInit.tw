::clothesInit [init]

<<set $clothesType to {
	"wig" : {
		slots : ["wig"],
		description : function(clothes, character) {
			return String.format(
				"Your {0} hides your {1} {2} hairs",
				clothes.name, 
				character.getLook("hairLength"),
				character.getLook("hairColor")
			);
		} 
	}
}>>

<<set $playerInv to new Inventory({owner: $player})>>
<<= $playerInv.addItem(new Clothes({
	id: "defalutT-shirt",
	name: "a plain old white t-shirt",
	clothesType: "top"
}))>>